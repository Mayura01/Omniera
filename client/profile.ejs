<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../static/profile.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Pixelify+Sans&display=swap">
    <style>
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background-color: #2C3E50;
            margin: auto;
            padding: 1%;
            color: white;
            border: 1px solid #888;
            border-radius: 10px;
            width: 100%;
            max-width: 300px;
            height: 18vh;
            justify-content: space-evenly;
            align-items: center;
        }

        .modal-content p {
            font-size: 1.2rem;
            font-family: 'Pixelify Sans', sans-serif;
        }

        .modal-content button {
            background-color: #ffffff;
            width: 40%;
            color: rgb(0, 0, 0);
            height: 20%;
            border-radius: 4px;
            font-family: 'Pixelify Sans', sans-serif;
            font-size: 1.1rem;
            border: none;
            cursor: pointer;
        }

        .modal-content #confirmDelete:hover {
            background-color: rgb(255, 48, 48);
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
    </style>
</head>

<body>

    <header>
        <div class="logo" onclick="window.location='/'">
            <img  src="\assets\logo.png" alt="logo of omneria">
        </div>
    </header>
    <div class="container">
        <h1 class="greeting"> <span>Hello!</span>
            <spam class="ta">OMNERIA</spam>
        </h1>

        <div class="details">
            <P class="personal">
            <h2 id="tc"><span>NAME</span>: nova</P>
                <P class="personal"><span>EMAIL</span>: mnova@nova.com
            </h2>
            </P>
            <div id="logout">
                <div class="downbtn">
                    <h2 id="lt" > logout</h2>
                    <p id="clr">logout of your account</p>
                </div> 
                <button id="logoutBtn" class="lb" >LOGOUT</button>
            </div>
            <div id="clear" class="bc">
                <div class="downbtn">
                    <h2 class="fs"> clear </h2>
                    <p class="fs">clear your chats</p>
                </div><button id="clearDataBtn" class="db">CLEAR DATA</button>
            </div>

            <div id="delete" class="bc">
                <div class="downbtn">
                    <h2 class="fs"> delete</h2>
                    <p class="fs">account delete</p>
                </div><button id="deleteAccountBtn" class="db">DELETE ACCOUNT</button>
            </div>

        </div>

        <div id="confirmModal" class="modal">
            <div class="modal-content">
                <span class="close" id="closeModal">&times;</span>
                <p>Are you sure want to delete your account?</p>
                <button id="confirmDelete">Yes</button>
                <button id="cancelDelete">No</button>
            </div>
        </div>



        <script>
            function showConfirmModal() {
                document.getElementById("confirmModal").style.display = "flex";
            }

            document.getElementById("closeModal").onclick = function () {
                document.getElementById("confirmModal").style.display = "none";
            };

            document.getElementById("cancelDelete").onclick = function () {
                document.getElementById("confirmModal").style.display = "none";
            };

            document.getElementById("confirmDelete").onclick = function () {
                deleteAccount();
                document.getElementById("confirmModal").style.display = "none";
            };
            document.getElementById('clearDataBtn').addEventListener('click', function () {
                fetch('https://17ndjjzq-3000.inc1.devtunnels.ms/clear-data', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },

                })
                    .then(response => {
                        if (response.ok) {
                            window.location = '/';
                        } else {
                            console.error('Failed to delete data');
                        }
                    })
                    .catch(error => {
                        console.error('Error deleting data:', error);
                    });
            });

            document.getElementById('logoutBtn').addEventListener('click', function () {
                fetch('https://17ndjjzq-3000.inc1.devtunnels.ms/logout', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },

                })
                    .then(response => {
                        if (response.ok) {
                            window.location = '/';
                        } else {
                            console.error('Failed to logout');
                        }
                    })
                    .catch(error => {
                        console.error('Error loggin out:', error);
                    });
            });
            function deleteAccount() {
                fetch('https://17ndjjzq-3000.inc1.devtunnels.ms/kill-account', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },

                })
                    .then(response => {
                        if (response.ok) {
                            window.location = '/';
                        } else {
                            console.error('Failed to kill account');
                        }
                    })
                    .catch(error => {
                        console.error('Error killing account:', error);
                    });
            }
            document.getElementById('deleteAccountBtn').addEventListener('click', showConfirmModal);
        </script>
</body>

</html>