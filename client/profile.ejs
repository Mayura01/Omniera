<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../static/profile.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Pixelify+Sans&display=swap">
</head>

<body>

    <header>
        <div class="logo" onclick="window.location='/'">
            <img src="\assets\logo.png" alt="logo of omneria">
        </div>
    </header>
    <div class="container">
        <h1 class="greeting"> <span>Hello!</span> OMNERIA</h1>

        <div class="details">
            <P class="personal">
            <h2 id="tc"><span>NAME</span>: nova</P>
                <P class="personal"><span>EMAIL</span>: mnova@nova.com
            </h2>
            </P>
            <div id="logout">
                <div class="downbtn">
                    <h2 class="fs"> logout</h2>
                    <p>logout of your account</p>
                </div> <button id="log">LOGOUT</button>
            </div>
            <div id="clear">
                <div class="downbtn">
                    <h2 class="fs"> clear</h2>
                    <p>clear your chats</p>
                </div><button id="cd" class="db">CLEAR DATA</button>
            </div>

            <div id="delete">
                <div class="downbtn">
                    <h2 class="fs"> delete</h2>
                    <p>account delete</p>
                </div><button id="da" class="db">DELETE ACCOUNT</button>
            </div>

        </div>


        <script>document.getElementById('clearDataBtn').addEventListener('click', function () {
                fetch('http://localhost:3000/clear-data', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },

                })
                    .then(response => {
                        if (response.ok) {
                            window.location = '/';
                        } else {
                            console.error('Failed to delete data');
                        }
                    })
                    .catch(error => {
                        console.error('Error deleting data:', error);
                    });
            });

            document.getElementById('logoutBtn').addEventListener('click', function () {
                fetch('http://localhost:3000/logout', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },

                })
                    .then(response => {
                        if (response.ok) {
                            window.location = '/';
                        } else {
                            console.error('Failed to logout');
                        }
                    })
                    .catch(error => {
                        console.error('Error loggin out:', error);
                    });
            });

            document.getElementById('deleteAccountBtn').addEventListener('click', function () {
                if (confirm('Are you sure you want to delete your account? This action cannot be undone.')) {
                    fetch('http://localhost:3000/kill-account', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },

                    })
                        .then(response => {
                            if (response.ok) {
                                window.location = '/';
                            } else {
                                console.error('Failed to kill account');
                            }
                        })
                        .catch(error => {
                            console.error('Error killing account:', error);
                        });
                }
            });
        </script>
</body>

</html>